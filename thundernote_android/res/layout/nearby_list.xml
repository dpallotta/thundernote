<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/tv_distance"
        android:text="Ciwalk"
        android:textColor="#000066"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/tv_name"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Jl. Cihampelas"
        android:textColor="#336699"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_checkins"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/tv_address"
        android:layout_below="@id/tv_address"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="(2 tot checkins)"
        android:textColor="#336699"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_address"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="10 km"
        android:textColor="#336699"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/icona"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tv_checkins"
        android:layout_alignRight="@+id/tv_distance" />

</RelativeLayout>